{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "anidb": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:module": {
          "lintFix": true,
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        },
        "@schematics/angular:component": {
          "style": "scss",
          "skipTests": true
        }
      },
      "root": "",
      "sourceRoot": ".",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "customWebpackConfig": {
              "path": "assets/config/webpack.ts",
              "mergeStrategies": { "externals": "replace" }
            },
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/index.ts",
            "tsConfig": "tsconfig.json",
            "assets": [{
              "glob": "favicon.ico",
              "input": "assets/",
              "output": "/assets"
            }, {
              "glob": "robots.txt",
              "input": "assets/",
              "output": "/"
            }, {
              "glob": "manifest.json",
              "input": "assets/config/",
              "output": "/"
            }, {
              "glob": "**/*.png",
              "input": "assets/res/",
              "output": "/assets/icons"
            }, {
              "glob": "_redirects",
              "input": "assets/config/",
              "output": "/"
            }],
            "styles": [ "src/index.scss" ],
            "allowedCommonJsDependencies": [
              "chart.js",
              "xlsx"
            ],
            "aot": true,
            "sourceMap": {
              "scripts": true,
              "styles": false,
              "vendor": false
            }
          },
          "configurations": {
            "production": {
              "extractLicenses": true,
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "vendorChunk": false,
              "buildOptimizer": true,
              "serviceWorker": true,
              "ngswConfigPath": "assets/config/ngsw-config.json",
              "budgets": [{
                "type": "initial",
                "maximumWarning": "1.25mb",
                "maximumError": "1.5mb"
              }, {
                "type": "anyComponentStyle",
                "maximumWarning": "5kb",
                "maximumError": "6kb"
              }]
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true
            }
          }
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "options": {
            "port": 3000,
            "browserTarget": "anidb:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "anidb:build:production"
            },
            "development": {
              "browserTarget": "anidb:build:development"
            }
          }
        }
      }
    }
  },
  "defaultProject": "anidb"
}
