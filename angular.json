{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "anidb": {
      "root": "",
      "sourceRoot": ".",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:module": { "lintFix": true },
        "@schematics/angular:service": { "lintFix": true },
        "@schematics/angular:component": {
          "style": "scss",
          "lintFix": true
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "customWebpackConfig": {
              "path": "assets/config/webpack.ts",
              "mergeStrategies": { "externals": "replace" }
            },
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/index.ts",
            "tsConfig": "src/assets/config/tsconfig.app.json",
            "assets": [{
              "glob": "favicon.ico",
              "input": "assets/",
              "output": "/assets"
            }, {
              "glob": "robots.txt",
              "input": "assets/",
              "output": "/"
            }, {
              "glob": "**/*.woff2",
              "input": "node_modules/font-awesome/fonts",
              "output": "/assets/fonts"
            }, {
              "glob": "**/*.woff2",
              "input": "node_modules/roboto-fontface/fonts/roboto",
              "output": "/assets/fonts"
            }, {
              "glob": "manifest.json",
              "input": "assets/config/",
              "output": "/"
            }, {
              "glob": "**/*.png",
              "input": "src/assets/res/web/",
              "output": "/assets/icons"
            }, {
              "glob": "_redirects",
              "input": "assets/config/",
              "output": "/"
            }],
            "styles": [ "src/index.scss" ],
            "extractCss": true,
            "extractLicenses": false
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "aot": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "serviceWorker": true,
              "ngswConfigPath": "src/assets/config/ngsw-config.json",
              "budgets": [{
                "type": "initial",
                "maximumWarning": "2mb",
                "maximumError": "5mb"
              }, {
                "type": "anyComponentStyle",
                "maximumWarning": "6kb",
                "maximumError": "10kb"
              }]
            }
          }
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "options": {
            "customWebpackConfig": {
              "path": "assets/config/webpack.ts",
              "mergeStrategies": { "externals": "replace" }
            },
            "port": 3000,
            "browserTarget": "anidb:build",
            "progress": false,
            "sourceMap": {
              "scripts": true,
              "styles": false,
              "vendor": false
            }
          },
          "configurations": {
            "production": { "browserTarget": "anidb:build:production" }
          }
        },
        "test": {
          "builder": "@angular-builders/custom-webpack:karma",
          "options": {
            "customWebpackConfig": {
              "path": "src/assets/config/webpack.ts",
              "mergeStrategies": { "externals": "replace" }
            },
            "main": "src/assets/config/testing/test.ts",
            "tsConfig": "src/assets/config/tsconfig.spec.json",
            "karmaConfig": "src/assets/config/testing/karma.conf.ts",
            "codeCoverage": true,
            "styles": [ "src/index.scss" ],
            "assets": [{
              "glob": "favicon.ico",
              "input": "assets/",
              "output": "/assets"
            }, {
              "glob": "robots.txt",
              "input": "assets/",
              "output": "/"
            }, {
              "glob": "**/*.woff2",
              "input": "node_modules/font-awesome/fonts",
              "output": "/assets/fonts"
            }, {
              "glob": "**/*.woff2",
              "input": "node_modules/roboto-fontface/fonts/roboto",
              "output": "/assets/fonts"
            }, {
              "glob": "manifest.json",
              "input": "assets/config/",
              "output": "/"
            }, {
              "glob": "**/*.png",
              "input": "src/assets/res/web/",
              "output": "/assets/icons"
            }, {
              "glob": "_redirects",
              "input": "assets/config/",
              "output": "/"
            }]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/assets/config/tsconfig.app.json",
              "src/assets/config/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**",
              "**/*.spec.ts"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "anidb"
}
