<?xml version='1.0' encoding='utf-8'?>
<widget id="com.minase.anidb" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Rin's AniDB</name>
    <description>
        Rin Minase's Anime Database using AngularJS in ES6 compiled for Android with Cordova
    </description>
    <author email="rin.black.raison.detre@gmail.com" href="https://rin-anidb.firebaseapp.com/">
        Rin Minase
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="mdpi" src="src/assets/res/android/icon/mdpi.png" />
        <icon density="hdpi" src="src/assets/res/android/icon/hdpi.png" />
        <icon density="xhdpi" src="src/assets/res/android/icon/xhdpi.png" />
        <icon density="xxhdpi" src="src/assets/res/android/icon/xxhdpi.png" />
        <hook src="src/assets/res/android/hooks/after_build.js" type="after_build" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="android-targetSdkVersion" value="19" />
    <preference name="android-minSdkVersion" value="19" />
    <engine name="android" spec="^7.0.0" />
</widget>
