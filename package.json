{
  "name": "rin-anidb",
  "description": "Rin Minase's Anime Database using AngularJS in ES6 compiled for Android with Cordova and deployed to Firebase using Travis CI",
  "homepage": "https://rin-anidb.firebaseapp.com/",
  "version": "0.2.0",
  "license": "MIT",
  "author": "Rin Minase",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/RinMinase/anidb"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod && sw-precache --root=dist --config=src/assets/config/sw-precache-config.js",
    "build-np": "ng build --prod --no-progress && sw-precache --root=dist --config=src/assets/config/sw-precache-config.js",
    "build-bh": "ng build --prod --base-href ./ && sw-precache --root=dist --config=src/assets/config/sw-precache-config.js",
    "bundle": "rm -rf www && npm run build-bh && mv dist www && cordova build android && rm -rf www",
    "test": "ng test",
    "lint": "stylelint src/**/*.scss & ng lint",
    "slint": "stylelint src/**/*.scss",
    "slint-v": "stylelint src/**/*.scss --formatter verbose",
    "tslint": "ng lint",
    "setup": "cordova platform add android && yarn"
  },
  "dependencies": {
    "@uirouter/angularjs": "^1.0.22",
    "angular": "1.7.6",
    "angular-animate": "^1.7.6",
    "angular-chart.js": "^1.1.1",
    "angular-hammer": "^2.2.0",
    "angular-sweetalert": "^1.1.2",
    "animatewithsass": "^3.2.1",
    "awesome-bootstrap-checkbox": "^1.0.1",
    "bluebird": "^3.5.3",
    "bootstrap": "^4.2.1",
    "firebase": "^5.8.2",
    "font-awesome": "^4.7.0",
    "fuse.js": "^3.3.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "oclazyload": "^1.1.0",
    "popper.js": "1.14.7",
    "roboto-fontface": "^0.10.0",
    "rxjs": "^6.3.3",
    "sweetalert2": "^8.2.4",
    "xlsx": "^0.14.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.3",
    "@angular/cli": "^7.3.3",
    "@angular/compiler-cli": "^7.2.6",
    "@angular/platform-browser-dynamic": "^7.2.6",
    "@types/jasmine": "^3.3.9",
    "@types/jasminewd2": "^2.0.3",
    "@types/node": "^11.9.5",
    "codelyzer": "^4.5.0",
    "cordova-android": "^8.0.0",
    "cordova-plugin-whitelist": "^1.3.3",
    "firebase-tools": "^6.4.0",
    "jasmine-core": "^3.3.0",
    "karma": "^4.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "stylelint": "^9.10.1",
    "sw-precache": "^5.2.1",
    "tslint": "^5.13.0",
    "typescript": ">=3.1.1 <3.3"
  },
  "resolutions": {
    "**/@firebase/app-types": "0.3.4",
    "**/@firebase/auth-types": "0.5.2",
    "**/@firebase/firestore-types": "1.0.2",
    "**/@firebase/messaging-types": "0.2.5",
    "**/@firebase/storage-types": "0.2.5",
    "**/@firebase/util": "0.2.7",
    "**/jquery": "3.3.1",
    "**/popper.js": "1.14.7"
  },
  "engines": {
    "node": "^6.14.0 || ^8.10.0 || >=9.10.0",
    "yarn": "^1.13.0"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {}
    },
    "platforms": [
      "android"
    ]
  }
}
