{
  "name": "rin-anidb",
  "description": "Rin Minase's Anime Database using Angular 8 compiled for Android with Cordova and deployed to both Firebase and Netlify using Circle CI",
  "homepage": "https://rin-anidb.firebaseapp.com/",
  "version": "0.2.0",
  "license": "MIT",
  "author": "Rin Minase",
  "private": true,
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/RinMinase/anidb"
  },
  "scripts": {
    "start": "ng serve",
    "build": "ng build --prod --no-progress",
    "bundle": "npm run bundle-build && npm run bundle-app && npm run bundle-post",
    "bundle-build": "ng build --prod --base-href ./ && mv dist www",
    "bundle-app": "tsc src/assets/res/android/hooks/after_build.ts && cordova build android",
    "bundle-post": "rm -rf www && rm src/assets/res/android/hooks/after_build.js",
    "test": "ng test --no-progress",
    "codecov": "codecov",
    "lint": "stylelint src/**/*.scss & ng lint",
    "setup": "cordova platform add android && yarn"
  },
  "dependencies": {
    "@angular-builders/custom-webpack": "^8.2.0",
    "@angular/common": "^8.2.13",
    "@angular/core": "^8.2.13",
    "@angular/forms": "^8.2.13",
    "@angular/platform-browser": "^8.2.13",
    "@angular/pwa": "^0.803.18",
    "@angular/router": "^8.2.13",
    "@angular/service-worker": "^8.2.13",
    "@ng-bootstrap/ng-bootstrap": "^5.1.2",
    "animatewithsass": "^3.2.1",
    "bootstrap": "^4.3.1",
    "cordova-android": "^8.1.0",
    "date-fns": "^2.7.0",
    "firebase": "^7.3.0",
    "font-awesome": "^4.7.0",
    "fuse.js": "^3.4.5",
    "ng2-charts": "^2.3.0",
    "ng2-file-upload": "^1.4.0",
    "ngx-dropzone-wrapper": "^8.0.0",
    "roboto-fontface": "^0.10.0",
    "rxjs": "^6.5.3",
    "scss-spinners": "^1.1.13",
    "sweetalert2": "^9.2.0",
    "xlsx": "^0.15.1",
    "zone.js": "^0.9.1"
  },
  "devDependencies": {
    "@angular/cli": "^8.3.18",
    "@angular/compiler": "^8.2.13",
    "@angular/compiler-cli": "^8.2.13",
    "@angular/platform-browser-dynamic": "^8.2.13",
    "@types/jasmine": "^3.4.6",
    "@types/node": "^12.12.6",
    "codecov": "^3.6.1",
    "codelyzer": "^5.2.0",
    "cordova-plugin-whitelist": "^1.3.4",
    "firebase-tools": "^7.7.0",
    "jasmine-core": "^3.5.0",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.1",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "^2.0.1",
    "stylelint": "^11.1.1",
    "tslint": "^5.20.1",
    "tslint-sonarts": "^1.9.0",
    "typescript": "~3.5.3"
  },
  "resolutions": {
    "**/@angular-devkit/build-angular": "^0.803.18",
    "**/chart.js": "^2.9.2",
    "**/jquery": "^3.4.1",
    "**/popper.js": "^1.16.0"
  },
  "engines": {
    "node": "^10.12.0 || >=12.0.0",
    "yarn": "^1.10.0"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {}
    },
    "platforms": [
      "android"
    ]
  }
}
