{
  "name": "rin-anidb",
  "description": "Rin Minase's AniDB using Preact with Vite and deployed to Netlify",
  "homepage": "https://anidb.netlify.com/",
  "version": "0.3.0",
  "license": "MIT",
  "author": "Rin Minase",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/RinMinase/anidb"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run lint && tsc && vite build",
    "lint": "eslint --ext .ts,tsx ./src",
    "cz": "cz"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hookform/resolvers": "^3.9.1",
    "@mui/lab": "^6.0.0-beta.19",
    "@mui/material": "^6.2.0",
    "@mui/x-date-pickers": "^7.23.2",
    "awesome-debounce-promise": "^2.1.0",
    "axios": "^1.7.9",
    "chart.js": "^4.4.7",
    "chartjs-plugin-datalabels": "^2.2.0",
    "date-fns": "^4.1.0",
    "font-color-contrast": "^11.1.0",
    "js-cookie": "^3.0.5",
    "lodash-es": "^4.17.21",
    "preact": "^10.24.3",
    "preact-async-route": "^2.2.1",
    "preact-router": "^4.1.2",
    "react-dropzone": "^14.3.5",
    "react-feather": "^2.0.10",
    "react-hook-form": "^7.53.2",
    "react-scroll": "^1.9.0",
    "react-virtuoso": "^4.12.3",
    "react-waypoint": "^10.3.0",
    "sonner": "^1.7.1",
    "ua-parser-js": "^2.0.0",
    "yup": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@date-io/date-fns": "^3.0.0",
    "@mui/system": "^6.2.0",
    "@preact/preset-vite": "^2.9.3",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.10.2",
    "@types/react-scroll": "^1.8.10",
    "commitizen": "^4.3.1",
    "cz-emoji-conventional": "^1.1.0",
    "devmoji": "^2.3.0",
    "eslint": "8.57.0",
    "eslint-config-preact": "^1.5.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^6.0.3",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-svgr": "^4.3.0",
    "yorkie": "^2.0.0"
  },
  "resolutions": {
    "react": "^18.3.1 ",
    "react-dom": "^18.3.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": "^1.19.1"
  },
  "gitHooks": {
    "prepare-commit-msg": "devmoji -e"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji-conventional"
    }
  },
  "prettier": {
    "printWidth": 80,
    "bracketSpacing": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "warnOnUnsupportedTypeScriptVersion": false,
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "react-hooks/exhaustive-deps": "off",
      "radix": "off"
    }
  }
}
