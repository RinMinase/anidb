{
  "name": "rin-anidb",
  "description": "Rin Minase's Anime Database using Angular 7 compiled for Android with Cordova and deployed to Firebase using Circle CI",
  "homepage": "https://rin-anidb.firebaseapp.com/",
  "version": "0.2.0",
  "license": "MIT",
  "author": "Rin Minase",
  "private": true,
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/RinMinase/anidb"
  },
  "scripts": {
    "start": "ng serve",
    "build": "ng build --prod --no-progress && npm run sw-cache",
    "bundle": "npm run bundle-build && npm run bundle-app && npm run bundle-post",
    "bundle-build": "ng build --prod --base-href ./ && npm run sw-cache && mv dist www",
    "bundle-app": "tsc src/assets/res/android/hooks/after_build.ts && cordova build android",
    "bundle-post": "rm -rf www && rm src/assets/res/android/hooks/after_build.js",
    "sw-cache": "sw-precache --root=dist --config=src/assets/config/sw-precache.ts",
    "test": "ng test",
    "lint": "stylelint src/**/*.scss & ng lint",
    "setup": "cordova platform add android && yarn"
  },
  "dependencies": {
    "@angular/common": "^7.2.9",
    "@angular/core": "^7.2.9",
    "@angular/forms": "^7.2.9",
    "@angular/platform-browser": "^7.2.9",
    "@angular/router": "^7.2.9",
    "@ng-bootstrap/ng-bootstrap": "^4.1.0",
    "animatewithsass": "^3.2.1",
    "bootstrap": "^4.3.1",
    "chart.js": "^2.7.3",
    "cordova-android": "^8.0.0",
    "date-fns": "^1.30.1",
    "firebase": "^5.8.6",
    "font-awesome": "^4.7.0",
    "fuse.js": "^3.4.4",
    "ng2-charts": "^1.6.0",
    "ngx-build-plus": "^7.7.6",
    "roboto-fontface": "^0.10.0",
    "rxjs": "^6.3.3",
    "sweetalert2": "^8.3.0",
    "xlsx": "^0.14.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular/cli": "^7.3.5",
    "@angular/compiler": "^7.2.9",
    "@angular/compiler-cli": "^7.2.9",
    "@angular/platform-browser-dynamic": "^7.2.9",
    "@types/jasmine": "^3.3.9",
    "@types/node": "^11.11.3",
    "codelyzer": "^4.5.0",
    "cordova-plugin-whitelist": "^1.3.3",
    "firebase-tools": "^6.5.0",
    "jasmine-core": "^3.3.0",
    "karma": "^4.0.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "stylelint": "^9.10.1",
    "sw-precache": "^5.2.1",
    "tslint": "^5.14.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": ">=3.1.1 <3.3"
  },
  "resolutions": {
    "**/@angular-devkit/architect": "^0.13.5",
    "**/@angular-devkit/build-angular": "^0.13.5",
    "**/@angular-devkit/core": "^7.3.5",
    "**/@firebase/app-types": "^0.3.5",
    "**/@firebase/auth-types": "^0.5.3",
    "**/@firebase/firestore-types": "^1.0.3",
    "**/@firebase/messaging-types": "^0.2.6",
    "**/@firebase/storage-types": "^0.2.6",
    "**/@firebase/util": "^0.2.9",
    "**/jquery": "^3.3.1",
    "**/popper.js": "^1.14.7",
    "**/webpack": "4.29.0"
  },
  "engines": {
    "node": "^6.14.0 || ^8.10.0 || >=9.10.0",
    "yarn": "^1.10.0"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {}
    },
    "platforms": [
      "android"
    ]
  }
}
