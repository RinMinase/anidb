{
  "name": "rin-anidb",
  "description": "Rin Minase's AniDB using Preact with Vite and deployed to Netlify using Circle CI",
  "homepage": "https://anidb.netlify.com/",
  "version": "0.3.0",
  "license": "MIT",
  "author": "Rin Minase",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/RinMinase/anidb"
  },
  "scripts": {
    "dev": "npm start",
    "start": "run-p -s develop lint-watch",
    "develop": "vite --port 3000 --host",
    "build": "npm run -s lint && tsc && vite build",
    "preview": "vite preview",
    "lint": "run-s -s lint:**",
    "lint:begin": "chalk blue \"\"&& chalk blue \"Scanning code for lint issues\"",
    "lint:exec": "eslint --ext .ts,tsx --ignore-path .gitignore .",
    "lint:post": "chalk green \"\"&& chalk green \"Finished\"",
    "lint-watch": "nodemon -q --watch src -e ts,tsx --exec \"npm run -s lint\"",
    "cz": "cz"
  },
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@fortawesome/free-regular-svg-icons": "^6.1.2",
    "@fortawesome/free-solid-svg-icons": "^6.1.2",
    "@hookform/resolvers": "^2.9.7",
    "@mui/material": "^5.10.1",
    "awesome-debounce-promise": "^2.1.0",
    "axios": "^0.27.2",
    "chart.js": "^3.9.1",
    "chartjs-plugin-datalabels": "^2.1.0",
    "js-cookie": "^3.0.1",
    "preact": "^10.10.5",
    "preact-async-route": "^2.2.1",
    "preact-router": "^4.1.0",
    "react-dropzone": "^14.2.2",
    "react-fontawesome-svg-icon": "^1.1.1",
    "react-hook-form": "^7.34.2",
    "react-scroll": "^1.8.7",
    "sweetalert2": "^11.4.28",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.2",
    "@preact/preset-vite": "^2.3.0",
    "@types/js-cookie": "^3.0.2",
    "@types/react-scroll": "^1.8.4",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "chalk-cli": "^5.0.0",
    "commitizen": "^4.2.5",
    "cz-emoji-conventional": "^1.0.1",
    "devmoji": "^2.3.0",
    "eslint": "^8.22.0",
    "eslint-config-preact": "^1.3.0",
    "netlify-cli": "^11.1.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.7.4",
    "vite": "~3.0.9",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^0.12.3",
    "vite-tsconfig-paths": "^3.5.0",
    "yorkie": "^2.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": "^1.19.1"
  },
  "resolutions": {
    "@babel/core": "^7.12.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-fontawesome-svg-icon/react": "^17.0.0",
    "workbox-build": "^6.4.0",
    "workbox-window": "^6.4.0"
  },
  "gitHooks": {
    "prepare-commit-msg": "devmoji -e"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji-conventional"
    }
  },
  "prettier": {
    "printWidth": 80,
    "bracketSpacing": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "react-hooks/exhaustive-deps": "off"
    },
    "settings": {
      "jest": {
        "version": 27
      }
    }
  }
}
