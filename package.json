{
  "name": "rin-anidb",
  "description": "Rin Minase's Anime Database using AngularJS in ES6 compiled for Android with Cordova",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Rin Minase",
  "repository": {
    "type": "git",
    "url": "https://github.com/RinMinase/anidb"
  },
  "main": "index.js",
  "scripts": {
    "start": "gulp serve",
    "build": "gulp serve:dist",
    "bundle": "gulp bundle && cordova build android && adb install -r build/com.minase.anidb_0.1.0.apk",
    "deploy": "gulp build && firebase deploy",
    "lint": "eslint --ext .js src\\app",
    "test": "nightwatch --config src/assets/testing/nightwatch.conf.js",
    "setup": "cordova add platform android && yarn install",
    "dl-driver": "node src/assets/testing/nightwatch.conf.js"
  },
  "dependencies": {
    "@uirouter/angularjs": "^1.0.20",
    "angular": "^1.7.3",
    "angular-animate": "^1.7.3",
    "angular-chart.js": "^1.1.1",
    "angular-hammer": "^2.2.0",
    "angular-sweetalert": "^1.1.2",
    "animatewithsass": "^3.2.1",
    "ansi-colors": "^3.0.5",
    "awesome-bootstrap-checkbox": "^1.0.1",
    "babel-core": "^6.7.4",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "bluebird": "^3.5.2",
    "bootstrap": "^4.1.3",
    "browser-sync": "^2.24.7",
    "browser-sync-spa": "^1.0.3",
    "chromedriver": "^2.41.0",
    "compression-webpack-plugin": "^1.1.12",
    "cordova-android": "^7.1.1",
    "cordova-plugin-whitelist": "^1.3.3",
    "dotenv": "^6.0.0",
    "eslint": "^5.5.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-angular": "^3.3.0",
    "fancy-log": "^1.3.2",
    "firebase": "^5.4.2",
    "font-awesome": "^4.7.0",
    "fuse.js": "^3.2.1",
    "gulp": "^3.9.0",
    "gulp-angular-templatecache": "^2.2.1",
    "gulp-autoprefixer": "^6.0.0",
    "gulp-filter": "^5.1.0",
    "gulp-htmlmin": "^4.0.0",
    "gulp-inject": "^4.3.2",
    "gulp-rename": "^1.4.0",
    "gulp-rev": "^8.1.1",
    "gulp-rev-replace": "^0.4.2",
    "gulp-sass": "^4.0.1",
    "gulp-size": "^3.0.0",
    "gulp-useref": "^3.0.3",
    "html-loader": "^0.5.5",
    "lodash": "^4.17.5",
    "moment": "^2.22.2",
    "ng-annotate-loader": "^0.6.1",
    "ngtemplate-loader": "^2.0.1",
    "nightwatch": "^0.9.21",
    "oclazyload": "^1.1.0",
    "roboto-fontface": "^0.10.0",
    "run-sequence": "^2.2.1",
    "selenium-server": "^3.14.0",
    "ui-bootstrap4": "^3.0.4",
    "velocity-animate": "^1.5.2",
    "webpack": "^4.17.2",
    "webpack-stream": "5.1.1",
    "xlsx": "^0.13.5"
  },
  "engines": {
    "node": "^6.14.0 || ^8.10.0 || >=9.10.0"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {}
    },
    "platforms": [
      "android"
    ]
  },
  "eslintIgnore": [
    "src/assets/*"
  ]
}
