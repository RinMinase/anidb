{
  "name": "rin-anidb",
  "description": "Rin Minase's AniDB using Preact with Vite and deployed to Netlify using Circle CI",
  "homepage": "https://anidb.netlify.com/",
  "version": "0.3.0",
  "license": "MIT",
  "author": "Rin Minase",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/RinMinase/anidb"
  },
  "scripts": {
    "dev": "npm start",
    "start": "concurrently \"npm:develop\" \"npm:lint-watch\"",
    "develop": "vite",
    "build": "npm run -s lint && tsc && vite build",
    "preview": "vite preview",
    "lint": "run-s -s lint:**",
    "lint-watch": "nodemon -q --watch src -e ts,tsx --exec \"npm run -s lint\"",
    "lint:begin": "chalk blue \"\"&& chalk blue \"Scanning code for lint issues\"",
    "lint:exec": "eslint --ext .ts,tsx --ignore-path .gitignore .",
    "lint:post": "chalk green \"\"&& chalk green \"Finished\"",
    "cz": "cz"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@hookform/resolvers": "^3.1.0",
    "@mui/lab": "^5.0.0-alpha.129",
    "@mui/material": "^5.12.3",
    "@mui/x-date-pickers": "^6.3.1",
    "animate.css": "^4.1.1",
    "awesome-debounce-promise": "^2.1.0",
    "axios": "^1.4.0",
    "chart.js": "^4.3.0",
    "chartjs-plugin-datalabels": "^2.2.0",
    "date-fns": "^2.30.0",
    "font-color-contrast": "^11.1.0",
    "js-cookie": "^3.0.5",
    "lodash-es": "^4.17.21",
    "preact": "^10.13.2",
    "preact-async-route": "^2.2.1",
    "preact-router": "^4.1.0",
    "qs": "^6.11.1",
    "react-dropzone": "^14.2.3",
    "react-fontawesome-slim": "^1.0.0",
    "react-hook-form": "^7.43.9",
    "react-scroll": "^1.8.9",
    "react-waypoint": "^10.3.0",
    "sweetalert2": "^11.7.5",
    "ua-parser-js": "^1.0.35",
    "uuid": "^9.0.0",
    "yup": "^1.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@date-io/date-fns": "^2.16.0",
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@mui/base": "^5.0.0-alpha.128",
    "@mui/system": "^5.12.3",
    "@preact/preset-vite": "^2.5.0",
    "@types/js-cookie": "^3.0.3",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^20.1.0",
    "@types/qs": "^6.9.7",
    "@types/react-scroll": "^1.8.7",
    "@types/ua-parser-js": "^0.7.36",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "chalk-cli": "^5.0.1",
    "commitizen": "^4.3.0",
    "concurrently": "^8.0.1",
    "cz-emoji-conventional": "^1.0.1",
    "devmoji": "^2.3.0",
    "eslint": "^8.40.0",
    "eslint-config-preact": "^1.3.0",
    "lodash.deburr": "^4.1.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "responselike": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^0.14.7",
    "vite-tsconfig-paths": "^4.2.0",
    "workbox-build": "^6.4.0",
    "workbox-window": "^6.4.0",
    "yorkie": "^2.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": "^1.19.1"
  },
  "resolutions": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "gitHooks": {
    "prepare-commit-msg": "devmoji -e"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji-conventional"
    }
  },
  "prettier": {
    "printWidth": 80,
    "bracketSpacing": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "react-hooks/exhaustive-deps": "off",
      "radix": "off"
    },
    "settings": {
      "jest": {
        "version": 27
      }
    }
  }
}
